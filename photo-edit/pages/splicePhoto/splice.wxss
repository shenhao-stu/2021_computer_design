.toolbar-bottom{
  display: flex;
  justify-content: space-around;
  width:100%;
  position: fixed;
  bottom: 0;
  height:160rpx;
  border-top: 1rpx solid #b17a7e;
  background-color: #cc9999;
}
.toolbar-bottom view{
  display: inline-block;
  width:150rpx;
  height:120rpx;
  font-size: 28rpx;
  text-align: center;
  margin-top: 20rpx;
  position: relative;
  border-radius: 10rpx;
}
.toolbar-bottom view:active{
  background-color: rgba(255,255,255,0.5);
}
.toolbar-bottom view text{
  display: block;
  margin: 0 auto;
}
.toolbar-bottom view .text{
  position: absolute;
  bottom: 0;
  left:50%;
  transform: translateX(-50%);
  white-space: nowrap;
}
.longImage{
  width:100%;
  text-align: center;
  background-color: #cc9999;
  font-size: 0;
}
.img-wrapbox{
  position: relative;
  margin: 0;
}
.longImage image{
  width:100%;
  margin: 0;
}
.deleteTextBox{
  position:absolute;
  z-index: 100;
  text-align: center;
  font-size: 30rpx;
  width:240rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 20rpx;
  background-color: rgba(250, 150, 150, 0.9);
  left:50%;
  transform: translate(-50%,-100%);
}
.deleteTextBox:active{
  background-color: #ccc;
}
.photoframe{
  position: relative;
  width:100%;
  overflow: hidden; 
}
.photoframe .frame{
  position: absolute;
  z-index: 2;
  width:100%;
  margin: 0;
}
.photoframe .photo{
  position: absolute;
  z-index: 1;
}
@keyframes animation
{
  0%   {bottom:-900rpx;}
  100% {bottom:0;}
}
.farmeChoose{
  width:750rpx;
  height:900rpx;
  position: fixed;
  bottom: 0;
  z-index: 2;
  background-color: #fff;
  border-top:2rpx solid #ccc; 
  box-shadow:10rpx -10rpx 10rpx 0 #ccc;  
  font-size: 0;
  animation-name:animation;
  animation-duration: 0.2s;
  animation-timing-function: ease;
}
