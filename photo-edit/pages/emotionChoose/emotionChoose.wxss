page{
    background-color: #ccc;
}
.emotion-page{
  width:100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between; 
  padding-top:60rpx; 
}
.emotion-top{
  position: fixed;
  z-index: 100;
  top:0;
  width:100%;
  height:60rpx;
  background-color: #cc9999;
}
.emotion-top text{
  padding-left: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.emotion-top view{
  float:right;
  margin-right: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: rgba(100, 100, 100, 0.3);
  border-radius: 20rpx;
  padding: 0 10rpx;
  color:#fff;
  font-size: 30rpx;
  /* border:1rpx solid #fff; */
}
.emotion-top view:active{
  background-color: #fe8295;
  color:#000;
}
