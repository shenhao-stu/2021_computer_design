.emotion-box image{
  width:92%;
  height:92%;
  position:absolute;
	left:50%;
	top:50%;
	transform:translate(-50%,-50%);
}
.img-wrap{
	width:100%;
	height:100%;
	position:absolute;
	top:0;
	left:0;
	background-color:transparent;
}
.img-wrap:active{
	background-color:rgba(25,25,25,0.3);
}